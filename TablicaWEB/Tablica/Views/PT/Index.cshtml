<script type="text/javascript">
    $(function () {
        $("#gen").click(function () {
            $(".xD").val("klik");
        });
    })
    $(function () {
        function addElementsToDivs(elem) {
            if ($(elem).hasClass('zegar')) {
               elem.append('<table><tr><td>drag x: </td><td><input type="text" class="xPos" /></td></tr><tr><td>drag y: </td><td><input type="text" class="yPos" /></td></tr></table>');
            }
            else if ($(elem).hasClass('rss')) {
                elem.append('<p>Adres RSS: </p><input type="text" class="addr"/>');
            }
            else if ($(elem).hasClass('pogoda')) {
                elem.append('<p>Podaj miejsce</p><input type="text" class="weather"/>');
            }
            //elem.children('.zegar').append('<table><tr><td>drag x: </td><td><input type="text" class="xPos" /></td></tr><tr><td>drag y: </td><td><input type="text" class="yPos" /></td></tr></table>');
		}
        var $startPostion = $("#firstdiv");
        var $element;
        var $pos;
        $(".ob").draggable({
            helper: "clone",
            revert: "invalid"
        });
        $("#tablica").droppable({
            accept: ".ob",
            drop: function (event, ui) {
                $(this).append($(ui.draggable).clone());
                $("#tablica .ob").addClass("obiekt");
                $(".obiekt").removeClass("ui-draggable ob");
              //  $(".obiekt") = addElementsToDivs($(".obiekt"));
                $(".obiekt").draggable({
                    create: function (event, ui) {
                        $(this).position({
							my: "left top",
							at: "left top",
                            of: $startPostion
                        });
                        var $left = 0;
                        var $top = 0;
						$(this).append('<input type="button" class="delete" value="X"/>');
						$(this).children(".delete").position({
							my: "right top",
							at: "right top",
							of: this
						});
						$(this).children(".delete").click(function(){
							$(this).closest(".obiekt").detach();
						});
						addElementsToDivs($(this));
					},
                    start: function () {
                        $element = this;

                    },
                    drag: function (event, ui) {
                        $pos = $(this).offset();
                        $left = $pos.left - $startPostion.offset().left;
                        $top = $pos.top - $startPostion.offset().top;
                        $(".xPos", $element).val($left);
                        $(".yPos", $element).val($top);
                        $(".xD").val("left: " + $left + " top: " + $top);
                    },
                    containment: "#tablica"
                });
            }
        });
    });
</script>
